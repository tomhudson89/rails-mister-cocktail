
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2625&q=80);">
  <div class="container">
    <h1><strong>Mr cocktail</strong></h1>
    <p>The best repository of <strong>cocktails</strong> known to man! Add your favourite below</p>
  </div>
</div>

<div class="card">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product">
      <img src="https://source.unsplash.com/random/?cocktail" />
      <div class="card-product-infos">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        <p><%= cocktail.info %></p>
      </div>
    </div>

  <% end %>
</div>
<%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-flat" %>



